---
import { Image } from 'astro:assets';
import withus01 from '../assets/images/withus01.jpg';
import withus02 from '../assets/images/withus02.jpg';
import withus03 from '../assets/images/withus03.jpg';

const items = [
  { title: "First contact", description: "Description placeholder for the first point.", image: withus01 },
  { title: "Registration", description: "Description placeholder for the second point.", image: withus02 },
  { title: "Investment with Merly", description: "Description placeholder for the third point.", image: withus03 },
];
---

<section class="section">
  <h2 class="heading-lg pb-6 mb-8 border-dashed-light">How to invest with us</h2>

  <div class="flex flex-col">
    {items.map((item, i) => (
      <article class:list={["text-left", i < items.length - 1 && "separator"]}>
        <span class="badge-number">/ {String(i + 1).padStart(2, '0')}</span>
        <h3 class="heading-md mb-(--spacing-md)">{item.title}</h3>
        <p class="text-body mb-(--spacing-lg)">{item.description}</p>
        <a href="/register" class="btn-outline mb-(--spacing-lg)">Start registration now</a>
        <Image src={item.image} alt={item.title} class="img-cover h-[310px]" />
      </article>
    ))}
  </div>
</section>
