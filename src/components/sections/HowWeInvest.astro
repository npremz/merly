---
import { Image } from 'astro:assets';
import withus01 from '../../assets/images/withus01.jpg';
import withus02 from '../../assets/images/withus02.jpg';
import withus03 from '../../assets/images/withus03.jpg';

const items = [
  { title: "First contact", description: "Get in touch with our team to discuss your investment goals and risk profile. We'll help you understand how our equity and bond portfolios can work for you.", image: withus01 },
  { title: "Registration", description: "Complete your investor profile online with our secure KYC process. Choose your initial investment amount and preferred portfolio allocation between stocks and bonds.", image: withus02 },
  { title: "Investment with Merly", description: "Your capital is deployed into our diversified portfolio. Track your performance through monthly reports and adjust your strategy as your goals evolve.", image: withus03 },
];
---

<section class="section">
  <h2 class="heading-lg pb-6 mb-8 border-dashed-light lg:pb-12 lg:mb-12">How to invest with us</h2>

  <div class="flex flex-col">
    {items.map((item, i) => (
      <article class:list={["text-left md:grid md:grid-cols-4 md:gap-5", i < items.length - 1 && "separator"]}>
        <span class="badge-number">/ {String(i + 1).padStart(2, '0')}</span>
        <div class="md:flex md:flex-col md:justify-between md:col-span-2">
          <div class="md:max-w-3/4">
            <h3 class="heading-md mb-(--spacing-md) lg:mb-12">{item.title}</h3>
            <p class="text-body mb-(--spacing-lg)">{item.description}</p>
          </div>
          <a href="/register" class="btn-outline mb-(--spacing-lg) md:w-fit md:mb-0">Start registration now</a>
        </div>
        <Image
          src={item.image}
          alt={item.title}
          class="img-cover h-[310px] md:h-[270px] lg:h-[400px]"
          widths={[300, 400, 500]}
          sizes="(max-width: 1024px) 100vw, 25vw"
          loading="lazy"
        />
      </article>
    ))}
  </div>
</section>
