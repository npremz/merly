---
import { Image } from 'astro:assets';
import methode1 from '../../assets/images/methode1.png';
import methode2 from '../../assets/images/methode2.png';
import methode3 from '../../assets/images/methode3.png';

const items = [
  { title: "Premier rendez-vous", description: "Un échange gratuit et sans engagement pour comprendre votre situation, vos objectifs et vos préoccupations. Nous prenons le temps de vous écouter avant toute recommandation.", image: methode1 },
  { title: "Bilan patrimonial", description: "Analyse complète de votre patrimoine : actifs financiers, immobilier, fiscalité, protection sociale. Nous identifions les opportunités d'optimisation et les risques à anticiper.", image: methode2 },
  { title: "Accompagnement continu", description: "Mise en place des préconisations et suivi régulier. Points annuels, ajustements selon l'évolution de votre vie, disponibilité permanente pour vos questions.", image: methode3 },
];
---

<section class="section">
  <h2 class="heading-lg pb-6 mb-8 border-dashed-light lg:pb-12 lg:mb-12">Notre méthode</h2>

  <div class="flex flex-col">
    {items.map((item, i) => (
      <article class:list={["text-left md:grid md:grid-cols-4 md:gap-5", i < items.length - 1 && "separator"]}>
        <span class="badge-number">/ {String(i + 1).padStart(2, '0')}</span>
        <div class="md:flex md:flex-col md:justify-between md:col-span-2">
          <div class="md:max-w-3/4">
            <h3 class="heading-md mb-(--spacing-md) lg:mb-12">{item.title}</h3>
            <p class="text-body mb-(--spacing-lg)">{item.description}</p>
          </div>
          <a href="/contact" class="btn-outline mb-(--spacing-lg) md:w-fit md:mb-0">Prendre rendez-vous</a>
        </div>
        <Image
          src={item.image}
          alt={item.title}
          class="img-cover aspect-[1/1.3]"
          widths={[300, 400, 500]}
          sizes="(max-width: 1024px) 100vw, 25vw"
          loading="lazy"
        />
      </article>
    ))}
  </div>
</section>
