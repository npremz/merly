---
import { Image } from 'astro:assets';
import withus01 from '../../assets/images/withus01.jpg';
import withus02 from '../../assets/images/withus02.jpg';
import withus03 from '../../assets/images/withus03.jpg';

const items = [
  { title: "First contact", description: "Once your profile is approved, you will be able to begin your registration process. If needed, you will also have the option to schedule a call with us for assistance.", image: withus01 },
  { title: "Registration", description: "Once your profile is approved, you will be able to begin your registration process. If needed, you will also have the option to schedule a call with us for assistance.", image: withus02 },
  { title: "Investment with Merly", description: "Once your profile is approved, you will be able to begin your registration process. If needed, you will also have the option to schedule a call with us for assistance.", image: withus03 },
];
---

<section class="section">
  <h2 class="heading-lg pb-6 mb-8 border-dashed-light lg:pb-12 lg:mb-12">How to invest with us</h2>

  <div class="flex flex-col">
    {items.map((item, i) => (
      <article class:list={["text-left md:grid md:grid-cols-4 md:gap-5", i < items.length - 1 && "separator"]}>
        <span class="badge-number">/ {String(i + 1).padStart(2, '0')}</span>
        <div class="md:flex md:flex-col md:justify-between md:col-span-2">
          <div class="md:max-w-3/4">
            <h3 class="heading-md mb-(--spacing-md) lg:mb-12">{item.title}</h3>
            <p class="text-body mb-(--spacing-lg)">{item.description}</p>
          </div>
          <a href="/register" class="btn-outline mb-(--spacing-lg) md:w-fit md:mb-0">Start registration now</a>
        </div>
        <Image src={item.image} alt={item.title} class="img-cover h-[310px] md:h-[270px] lg:h-[400px]" />
      </article>
    ))}
  </div>
</section>
