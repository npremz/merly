---
import { Image } from 'astro:assets';
import blog01 from '../../assets/images/blog01.jpg';
import blog02 from '../../assets/images/blog02.jpg';
import blog03 from '../../assets/images/blog03.jpg';
import blog04 from '../../assets/images/blog04.jpg';

interface Props {
  class?: string;
}

const { class: className } = Astro.props;

const articles = [
  { date: "15.01.26", excerpt: "Perspectives 2026 : Comment positionner son portefeuille face aux incertitudes économiques mondiales.", image: blog01 },
  { date: "08.01.26", excerpt: "Obligations vs Actions : L'importance d'une allocation équilibrée dans un contexte de taux fluctuants.", image: blog02 },
  { date: "20.12.25", excerpt: "ESG et Performance : Intégrer les critères durables sans sacrifier le rendement de votre portefeuille.", image: blog03 },
  { date: "12.12.25", excerpt: "Diversification Sectorielle : Pourquoi les valeurs défensives gardent leur place en 2026.", image: blog04 },
];
---

<section class:list={["section !pr-0 pb-(--spacing-section)", className]}>
  <h2 class="heading-lg mb-8">What's new?</h2>

  <div class="articles-scroll flex gap-6 overflow-x-auto pr-6 pb-4">
    {articles.map((article) => (
      <article class="shrink-0 w-[280px] md:w-[310px]">
        <Image
          src={article.image}
          alt="Blog article"
          class="img-cover h-[400px] mb-5"
          widths={[280, 400, 500]}
          sizes="(max-width: 1024px) 280px, 310px"
          loading="lazy"
        />
        <time class="block mb-8">{article.date}</time>
        <p class="text-body">{article.excerpt}</p>
      </article>
    ))}
  </div>
</section>

<style>
  .articles-scroll {
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
  }
  .articles-scroll::-webkit-scrollbar {
    height: 4px;
  }
  .articles-scroll::-webkit-scrollbar-track {
    background: #e8e8e8;
    border-radius: 2px;
  }
  .articles-scroll::-webkit-scrollbar-thumb {
    background: #ccc;
    border-radius: 2px;
  }
</style>
