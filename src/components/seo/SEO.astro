---
interface Props {
  // Essential meta
  title: string;
  description: string;
  robots?: 'index, follow' | 'noindex, follow' | 'noindex, nofollow';
  canonical?: string;

  // Open Graph
  ogType?: 'website' | 'article';
  ogImage?: string;
  ogImageAlt?: string;

  // Twitter
  twitterCard?: 'summary' | 'summary_large_image';

  // Article specific (for og:type="article")
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;

  // Override site defaults
  siteName?: string;
  twitterSite?: string;
  locale?: string;
}

// Theme colors (hardcoded)
const THEME_COLOR_LIGHT = '#ffffff';
const THEME_COLOR_DARK = '#1a1a1a';

// Import site settings from Keystatic (will be available after content is created)
let siteSettings = {
  siteName: 'Mon Site',
  defaultDescription: 'Description par défaut du site',
  defaultOgImage: '/images/og-default.jpg',
  defaultOgImageAlt: 'Image par défaut du site',
  twitterSite: '',
  locale: 'fr_FR',
};

// Try to load site settings from Keystatic
try {
  const reader = await import('../../keystatic.config').then(async (mod) => {
    const { createReader } = await import('@keystatic/core/reader');
    return createReader({ config: mod.default });
  });
  const settings = await reader.singletons.siteSettings.read();
  if (settings) {
    siteSettings = {
      siteName: settings.siteName || siteSettings.siteName,
      defaultDescription: settings.defaultDescription || siteSettings.defaultDescription,
      defaultOgImage: settings.defaultOgImage || siteSettings.defaultOgImage,
      defaultOgImageAlt: settings.defaultOgImageAlt || siteSettings.defaultOgImageAlt,
      twitterSite: settings.twitterSite || siteSettings.twitterSite,
      locale: settings.locale || siteSettings.locale,
    };
  }
} catch {
  // Use default settings if Keystatic is not configured yet
}

const {
  title,
  description,
  robots = 'index, follow',
  canonical,
  ogType = 'website',
  ogImage,
  ogImageAlt,
  twitterCard = 'summary_large_image',
  publishedTime,
  modifiedTime,
  author,
  siteName = siteSettings.siteName,
  twitterSite = siteSettings.twitterSite,
  locale = siteSettings.locale,
} = Astro.props;

// Build full title with template
const fullTitle = `${title} | ${siteName}`;

// Resolve canonical URL
const canonicalURL = canonical
  ? new URL(canonical, Astro.site).href
  : new URL(Astro.url.pathname, Astro.site).href;

// Resolve OG image URL
const ogImageURL = ogImage
  ? new URL(ogImage, Astro.site).href
  : new URL(siteSettings.defaultOgImage, Astro.site).href;

const resolvedOgImageAlt = ogImageAlt || siteSettings.defaultOgImageAlt;
---

<!-- Essential Meta Tags -->
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>{fullTitle}</title>
<meta name="description" content={description} />
<meta name="robots" content={robots} />
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph -->
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImageURL} />
<meta property="og:image:alt" content={resolvedOgImageAlt} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:url" content={canonicalURL} />
<meta property="og:type" content={ogType} />
<meta property="og:locale" content={locale} />
<meta property="og:site_name" content={siteName} />

{ogType === 'article' && publishedTime && (
  <meta property="article:published_time" content={publishedTime} />
)}
{ogType === 'article' && modifiedTime && (
  <meta property="article:modified_time" content={modifiedTime} />
)}
{ogType === 'article' && author && (
  <meta property="article:author" content={author} />
)}

<!-- Twitter Card -->
<meta name="twitter:card" content={twitterCard} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImageURL} />
<meta name="twitter:image:alt" content={resolvedOgImageAlt} />
{twitterSite && <meta name="twitter:site" content={twitterSite} />}

<!-- Favicon & App Icons -->
<link rel="icon" href="/favicon.ico" sizes="32x32" />
<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
<link rel="manifest" href="/manifest.webmanifest" />

<!-- Theme Color (light & dark mode) -->
<meta name="theme-color" content={THEME_COLOR_LIGHT} media="(prefers-color-scheme: light)" />
<meta name="theme-color" content={THEME_COLOR_DARK} media="(prefers-color-scheme: dark)" />

<!-- Safari Pinned Tab -->
<link rel="mask-icon" href="/safari-pinned-tab.svg" color={THEME_COLOR_DARK} />
