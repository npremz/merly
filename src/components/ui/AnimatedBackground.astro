---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={["animated-bg", className]}>
  <div class="lines-container">
    {Array.from({ length: 7 }).map((_, i) => (
      <div class="line" data-line={i}>
        <span class="neon" style={`--delay: ${Math.random() * 10}s; --duration: ${3 + Math.random() * 2}s;`}></span>
      </div>
    ))}
  </div>
</div>

<style>
  .animated-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
    z-index: -1;
  }

  .lines-container {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
  }

  .line {
    position: relative;
    width: 1px;
    background-color: #D9D9F4;
    height: 100%;
  }

  /* Responsive: hide lines based on device */
  /* Mobile: 4 lines */
  .line:nth-child(n+5) {
    display: none;
  }

  /* Tablet: 6 lines */
  @media (min-width: 768px) {
    .line:nth-child(n+5) {
      display: block;
    }
    .line:nth-child(n+7) {
      display: none;
    }
  }

  /* Desktop: 7 lines */
  @media (min-width: 1024px) {
    .line:nth-child(n+7) {
      display: block;
    }
  }

  .neon {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: -60px;
    width: 1px;
    height: 60px;
    background: linear-gradient(to bottom, transparent, rgba(85, 80, 246, 0.6), transparent);
    border-radius: 1px;
    box-shadow:
      0 0 8px rgba(85, 80, 246, 0.3),
      0 0 16px rgba(85, 80, 246, 0.15);
    opacity: 0;
    animation: slide var(--duration, 3.5s) ease-in-out var(--delay, 0s) infinite;
  }

  @keyframes slide {
    0% {
      top: -60px;
      opacity: 0;
    }
    10% {
      opacity: 0.7;
    }
    90% {
      opacity: 0.7;
    }
    100% {
      top: calc(100% + 60px);
      opacity: 0;
    }
  }

  /* Reduced motion preference */
  @media (prefers-reduced-motion: reduce) {
    .neon {
      animation: none;
      opacity: 0;
    }
  }
</style>
