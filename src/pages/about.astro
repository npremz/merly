---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import aboutImage from '../assets/images/about.jpg';
import AnimatedBackground from '../components/ui/AnimatedBackground.astro';
import aboutIcon01 from '../assets/icons/about_01.svg';
import aboutIcon02 from '../assets/icons/about_02.svg';
import aboutIcon03 from '../assets/icons/about_03.svg';
import aboutIcon04 from '../assets/icons/about_04.svg';
import aboutIcon05 from '../assets/icons/about_05.svg';
import aboutIcon06 from '../assets/icons/about_06.svg';
import WhatsNew from '../components/sections/WhatsNew.astro';

const whyMerlyPoints = [
  {
    title: "Indépendance totale",
    description: "Aucune commission sur les produits recommandés. Notre rémunération exclusivement sur honoraires garantit des conseils objectifs, alignés uniquement sur vos intérêts.",
    icon: aboutIcon01
  },
  {
    title: "Approche globale",
    description: "Patrimoine financier, immobilier, fiscalité, prévoyance, transmission : nous analysons l'ensemble de votre situation pour une stratégie cohérente et optimisée.",
    icon: aboutIcon02
  },
  {
    title: "Expertise certifiée",
    description: "Diplômés en gestion de patrimoine, nous sommes membres de l'ANACOFI-CIF et immatriculés à l'ORIAS. Formation continue pour rester à jour des évolutions réglementaires.",
    icon: aboutIcon03
  },
  {
    title: "Accompagnement personnalisé",
    description: "Chaque situation est unique. Nous prenons le temps de comprendre vos objectifs, votre profil de risque et vos contraintes pour bâtir une stratégie sur-mesure.",
    icon: aboutIcon04
  },
  {
    title: "Disponibilité permanente",
    description: "Un conseiller dédié, joignable facilement. Points réguliers, réactivité face aux évolutions de votre vie, et accompagnement lors des décisions importantes.",
    icon: aboutIcon05
  },
  {
    title: "Transparence des frais",
    description: "Tarifs clairs communiqués en amont. Pas de surprise, pas de frais cachés. Vous savez exactement ce que vous payez et ce que vous obtenez en retour.",
    icon: aboutIcon06
  }
];
---

<Layout title="Le cabinet - Merly">
  <div class="relative">
    <AnimatedBackground />
    <section class="section section-bg-gray pt-16 md:pt-37.5 pb-(--spacing-section) text-left">
    <h1 class="heading-xl font-light leading-[1.2] mb-8 md:mb-16 lg:mb-24">Notre philosophie : l'indépendance au service de vos intérêts</h1>
    <Image
      src={aboutImage}
      alt="About Merly"
      class="img-cover h-[310px] mb-(--spacing-section) md:h-[500px] lg:h-[700px]"
      widths={[400, 800, 1200, 1512]}
      sizes="(max-width: 640px) 100vw, (max-width: 1024px) 100vw, 1512px"
      loading="eager"
      fetchpriority="high"
    />
    <p class="text-body-lg mb-8">
      Merly est un cabinet de conseil en gestion de patrimoine indépendant. Nous accompagnons les particuliers et les entrepreneurs dans l'organisation, l'optimisation et la transmission de leur patrimoine. Notre approche : une analyse globale de votre situation, des recommandations objectives et un suivi personnalisé dans la durée.
    </p>
    <a href="/contact" class="btn-outline btn-icon md:w-fit md:flex md:gap-12 bg-(--color-bg)">
      <span>Prendre rendez-vous</span>
      <svg width="8" height="8" viewBox="0 0 8 8" fill="none" xmlns="http://www.w3.org/2000/svg">
       <path d="M7.6416 7.36328L6.92578 7.36426L6.91797 1.83984C6.91765 1.60881 6.6357 1.48832 6.46973 1.6543L0.504883 7.61914L0 7.11816L5.96582 1.15234C6.13124 0.98632 6.00983 0.705733 5.77832 0.706055L0.238281 0.713867L0.237305 0.000976562L7.63086 0L7.6416 7.36328Z" fill="currentColor"/>
      </svg>
    </a>
  </section>

  <section class="pt-(--spacing-section) pb-(--spacing-section) px-(--spacing-container) max-w-(--max-width-site) mx-auto lg:px-0">
    <h2 class="heading-lg mb-8 md:mb-12">Pourquoi nous choisir ?</h2>
    <div class="bg-(--color-bg-section) rounded-[5px] p-6 md:p-16 lg:p-24">
      <div class="why-grid">
        {whyMerlyPoints.map((point, index) => (
          <div class="why-item" data-index={index}>
            <Image src={point.icon} alt="" class="h-12 lg:h-16 mb-8 lg:mb-12" aria-hidden="true" loading="lazy" />
            <h3 class="heading-md mb-4 lg:mb-6">{point.title}</h3>
            <p class="text-body leading-relaxed">{point.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

<style>
  .why-grid {
    display: grid;
    grid-template-columns: 1fr;
    column-gap: 6rem;
  }

  .why-item {
    padding-block: 2rem;
    border-bottom: 1px dashed var(--color-border);
  }

  .why-item:nth-child(1) {
    padding-top: 0;
  }

  .why-item:nth-child(6) {
    padding-bottom: 0;
    border-bottom: none;
  }

  .why-item:last-child {
    border-bottom: none;
  }

  @media (min-width: 1024px) {
    .why-grid {
      grid-template-columns: 1fr 1fr;
      padding: 0;
    }

    .why-item {
      padding: 2.5rem 0rem;
    }

    .why-item:nth-child(2) {
      padding-top: 0;
    }

    .why-item:nth-child(5),
    .why-item:nth-child(6) {
      padding-bottom: 0;
      border-bottom: none;
    }

    .why-item:nth-child(3),
    .why-item:nth-child(4) {
      border-bottom: 1px dashed var(--color-border);
    }
  }

  @media (min-width: 1512px) {
    .why-grid {
      column-gap: 15rem;
    }

    .why-item {
      padding: 6rem 0rem;
    }
  }
</style>

    </div>
  <WhatsNew />
</Layout>
