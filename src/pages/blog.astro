---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import AnimatedBackground from '../components/ui/AnimatedBackground.astro';
import blog01 from '../assets/images/blog01.jpg';
import blog02 from '../assets/images/blog02.jpg';
import blog03 from '../assets/images/blog03.jpg';
import blog04 from '../assets/images/blog04.jpg';
import resultImg from '../assets/images/result.jpg';

const blogArticles = [
  { date: "15.01.26", title: "Perspectives 2026 : Comment positionner son portefeuille face aux incertitudes économiques mondiales.", image: blog01 },
  { date: "08.01.26", title: "Obligations vs Actions : L'importance d'une allocation équilibrée dans un contexte de taux fluctuants.", image: blog02 },
  { date: "20.12.25", title: "ESG et Performance : Intégrer les critères durables sans sacrifier le rendement de votre portefeuille.", image: blog03 },
  { date: "12.12.25", title: "Diversification Sectorielle : Pourquoi les valeurs défensives gardent leur place en 2026.", image: blog04 },
  { date: "01.12.25", title: "Analyse Trimestrielle : Retour sur les performances du marché actions au T4 2025.", image: blog01 },
];

const mensuelArticles = [
  { date: "31.12.25", title: "Rapport de Décembre 2025 : Performance du portefeuille +0.8% avec une allocation 60/40 actions-obligations.", image: resultImg, featured: true },
  { date: "30.11.25", title: "Rapport de Novembre 2025 : Légère correction sur les marchés, notre stratégie défensive limite les pertes.", image: resultImg, featured: true },
  { date: "31.10.25", title: "Rapport d'Octobre 2025 : Rebond des valeurs technologiques, performance mensuelle de +1.2%.", image: resultImg, featured: true },
  { date: "30.09.25", title: "Rapport de Septembre 2025 : Volatilité accrue, nous renforçons la part obligataire du portefeuille.", image: resultImg, featured: true },
  { date: "31.08.25", title: "Rapport d'Août 2025 : Stabilité estivale, rendement de +0.5% sur un marché calme.", image: resultImg, featured: true },
];
---

<Layout title="Blog - Merly">
  <div class="relative">
    <AnimatedBackground />

    <!-- Hero Title -->
    <section class="section section-bg-transparent pt-16 md:pt-32 lg:pt-64 pb-8 md:pb-20 lg:pb-32">
      <h1 class="heading-xl leading-[1.25]">Explore our various articles about the world of finance</h1>
    </section>
  </div>

  <!-- Blog Content -->
  <div class="bg-(--color-bg-section)">
    <!-- Blog & News Section -->
    <section class="section !pr-0 pt-12 md:pt-16 lg:pt-20 pb-12 md:pb-16">
      <h2 class="heading-lg mb-8 md:mb-10">Blog & News</h2>

      <div class="articles-scroll flex gap-6 overflow-x-auto pr-6 pb-4 lg:grid lg:grid-cols-4 lg:gap-8 lg:overflow-visible lg:pr-0">
        {blogArticles.map((article) => (
          <article class="article-card shrink-0 w-[280px] md:w-[304px] lg:w-auto">
            <a href="#" class="block">
              <Image
                src={article.image}
                alt={article.title}
                class="img-cover h-[350px] md:h-[400px] lg:h-[440px] mb-4 rounded-[10px]"
                widths={[280, 350, 440]}
                sizes="(max-width: 1024px) 280px, 25vw"
                loading="lazy"
              />
              <time class="block text-base text-(--color-text)/70 mb-2">{article.date}</time>
              <p class="text-body font-bold leading-[1.6]">{article.title}</p>
            </a>
          </article>
        ))}
      </div>
    </section>

    <!-- Mensuel Result Section -->
    <section class="section !pr-0 pt-12 md:pt-16 pb-(--spacing-section)">
      <h2 class="heading-lg mb-8 md:mb-10">Monthly Performance Reports</h2>

      <div class="articles-scroll flex gap-6 overflow-x-auto pr-6 pb-4 lg:grid lg:grid-cols-4 lg:gap-8 lg:overflow-visible lg:pr-0">
        {mensuelArticles.map((article) => (
          <article class="article-card shrink-0 w-[280px] md:w-[304px] lg:w-auto">
            <a href="#" class="block">
              <Image
                src={article.image}
                alt={article.title}
                class="img-cover h-[350px] md:h-[400px] lg:h-[440px] mb-4 rounded-[10px]"
                widths={[280, 350, 440]}
                sizes="(max-width: 1024px) 280px, 25vw"
                loading="lazy"
              />
              <time class="block text-base text-(--color-text)/70 mb-2">{article.date}</time>
              <p class="text-body font-bold leading-[1.6]">{article.title}</p>
            </a>
          </article>
        ))}
      </div>
    </section>
  </div>
</Layout>

<style>
  .articles-scroll {
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
  }

  .articles-scroll::-webkit-scrollbar {
    height: 4px;
  }

  .articles-scroll::-webkit-scrollbar-track {
    background: #e8e8e8;
    border-radius: 2px;
  }

  .articles-scroll::-webkit-scrollbar-thumb {
    background: #ccc;
    border-radius: 2px;
  }

  .article-card a {
    text-decoration: none;
    color: inherit;
  }
</style>
